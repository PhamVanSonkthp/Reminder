<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_5ssp"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/dialog_infor_txt_name_btn_close"
        android:layout_marginEnd="@dimen/_5ssp"
        android:layout_marginTop="@dimen/_5ssp"
        android:layout_width="@dimen/_25ssp"
        android:layout_height="@dimen/_25ssp"
        android:layout_gravity="end"
        android:background="@null"
        android:src="@drawable/ic_baseline_close_24"
        app:tint="@color/red" />

    <TextView
        android:textSize="@dimen/_9ssp"
        android:text="Họ và tên:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/dialog_infor_txt_name"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/_10ssp"
        android:textSize="@dimen/_9ssp"
        android:text="ID:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/dialog_infor_txt_id"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/_10ssp"
        android:textSize="@dimen/_9ssp"
        android:text="Mã thiết bị mẹ:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/dialog_infor_edt_id_device"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        android:hint="Nhập mã thiết bị mẹ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/_10ssp"
        android:textSize="@dimen/_9ssp"
        android:text="Kênh:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/dialog_infor_edt_channel"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        android:hint="Kênh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_infor_btn_save"
        android:layout_marginTop="@dimen/_5ssp"
        android:text="Lưu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>