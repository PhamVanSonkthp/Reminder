<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:fillViewport="true"
    tools:context=".activity.UserActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_above="@+id/view_bottom"
        android:layout_width="match_parent"
        android:padding="@dimen/_5ssp"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5ssp">

                <ImageView
                    android:layout_width="@dimen/_30ssp"
                    android:layout_height="@dimen/_30ssp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:onClick="infor"
                    android:src="@drawable/ic_baseline_info_24" />

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="@dimen/_5ssp"
                    android:text="Chức năng"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <ImageView
                    android:layout_width="@dimen/_30ssp"
                    android:layout_height="@dimen/_30ssp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:onClick="logout"
                    android:src="@drawable/logout" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20ssp"
                android:orientation="horizontal"
                android:padding="@dimen/_5ssp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:gravity="center"
                    android:onClick="addSchedule"
                    android:orientation="vertical"
                    android:padding="@dimen/_5ssp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50ssp"
                        android:src="@drawable/ic_baseline_schedule_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Nhắc nhở"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:gravity="center"
                    android:onClick="alert"
                    android:orientation="vertical"
                    android:padding="@dimen/_5ssp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50ssp"
                        android:src="@drawable/alert" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Cảnh báo"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20ssp"
                android:orientation="horizontal"
                android:padding="@dimen/_5ssp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:gravity="center"
                    android:onClick="onMax30100Sensor"
                    android:orientation="vertical"
                    android:padding="@dimen/_5ssp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50ssp"
                        android:src="@drawable/ic_baseline_accessibility_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Nhịp tim"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:gravity="center"
                    android:onClick="onAirSensor"
                    android:orientation="vertical"
                    android:padding="@dimen/_5ssp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50ssp"
                        android:src="@drawable/ic_baseline_air_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Không khí"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20ssp"
                android:orientation="horizontal"
                android:padding="@dimen/_5ssp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:gravity="center"
                    android:onClick="connectClock"
                    android:orientation="vertical"
                    android:padding="@dimen/_5ssp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50ssp"
                        android:src="@drawable/ic_baseline_watch_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Kết nối với đồng hồ (Normal bluetooth)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:gravity="center"
                    android:onClick="bleConnectClock"
                    android:orientation="vertical"
                    android:padding="@dimen/_5ssp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50ssp"
                        android:src="@drawable/ic_baseline_watch_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Kết nối với đồng hồ (BLE bluetooth)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20ssp"
                android:orientation="horizontal"
                android:padding="@dimen/_5ssp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:onClick="myQR"
                    android:orientation="vertical"
                    android:padding="@dimen/_5ssp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50ssp"
                        android:src="@drawable/ic_baseline_qr_code_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Mã QR của tôi"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                </LinearLayout>

<!--                <LinearLayout-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_margin="@dimen/_10ssp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:background="@drawable/btn_back"-->
<!--                    android:onClick="assistant"-->
<!--                    android:orientation="vertical"-->
<!--                    android:padding="@dimen/_5ssp">-->

<!--                    <ImageView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="@dimen/_50ssp"-->
<!--                        android:src="@drawable/ic_baseline_record_voice_over_24" />-->

<!--                    <TextView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:gravity="center"-->
<!--                        android:text="Trợ lí âm thanh"-->
<!--                        android:textColor="@color/black"-->
<!--                        android:textSize="@dimen/_15ssp"-->
<!--                        android:textStyle="bold" />-->

<!--                </LinearLayout>-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:onClick="wifi"
                    android:orientation="vertical"
                    android:padding="@dimen/_5ssp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50ssp"
                        android:src="@drawable/ic_baseline_wifi_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Danh sách wifi"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/view_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:padding="@dimen/_5ssp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:visibility="gone"
            android:onClick="scanQR"
            android:layout_marginBottom="@dimen/_10ssp"
            android:padding="@dimen/_10ssp"
            android:background="@drawable/circle_theme_grey"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_qr_code_scanner_24"
            android:layout_width="@dimen/_50ssp"
            android:layout_height="@dimen/_50ssp"/>
    </LinearLayout>
</RelativeLayout>

