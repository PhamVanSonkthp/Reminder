<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10ssp"
        android:weightSum="2">

        <LinearLayout
            android:onClick="addSchedule"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center|start"
            android:layout_weight="1">
            <ImageView
                android:src="@drawable/add"
                android:layout_width="@dimen/_20ssp"
                android:layout_height="@dimen/_20ssp"/>
            <TextView
                android:layout_marginLeft="@dimen/_5ssp"
                android:text="Thêm nhắc nhở"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end|center"
            android:layout_weight="1">
            <TextView
                android:layout_marginEnd="@dimen/_5ssp"
                android:text="Cảnh báo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/alert"
                android:layout_width="@dimen/_20ssp"
                android:layout_height="@dimen/_20ssp"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:onClick="onAirSensor"
        android:padding="@dimen/_10ssp"
        android:text="Cảm biến không khí"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:onClick="onMax30100Sensor"
        android:padding="@dimen/_10ssp"
        android:text="Cảm biến nhịp tim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="@dimen/_10ssp"
        android:gravity="center"
        android:text="Danh sách nhắc nhở"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_remind"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>